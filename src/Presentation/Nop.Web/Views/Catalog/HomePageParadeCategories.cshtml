@model IList<CategoryModel>
@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
    <div class="col-sm-4 col-md-2 no-pad list-product-left">
        <div class="title1"><a href="@Url.RouteUrl("Category",new { SeName = Model[0].SeName })/">@Model[0].Name</a></div>
        <div class="body1  hidden-xs">
            <ul>
                @for (int i = 1; i < Model.Count; i++)
                {
                    if (i == 8) { break; }
                    <li><a href="@Url.RouteUrl("Category",new { SeName = Model[i].SeName })/">@Model[i].Name</a></li>
                
                }
            </ul>
        </div>
    </div>
    <div class="hidden-sm hidden-xs col-md-4 no-pad slick-onbody">
        <div class="content-slider-delay">
            @*<img src="/Themes/DefaultClean/Content/images/img_sementara/1.jpg" />
            <img src="/Themes/DefaultClean/Content/images/img_sementara/2.jpg" />
            <img src="/Themes/DefaultClean/Content/images/img_sementara/3.jpg" />*@
            @foreach (var banner in Model[0].Banners)
            {
                @*autogenerated*@
                <img src="@banner.PictureUrl" />
            }

        </div>
    </div>
    <div class="col-sm-8 col-md-6 no-pad box-product">
        @*bawaan lama*@
        @*<div class="title">
                <strong>@T("HomePage.Products")</strong>
            </div>*@
        <div class="item-grid">
            @foreach(var item in Model[0].FeaturedProducts.ToList())
            {
               
                <div class="item-box-product">
                    @Html.Partial("_ProductBox", item)
                </div>
            }
        </div>
    </div>
}
<script>
    $(document).ready(function () {

        $('.content-slider-delay').slick({
            slidesToShow: 1,
            slidesToScroll: 1,
            autoplay: true,
            autoplaySpeed: 3000,
            prevArrow: '.prev',
            nextArrow: '.next',
            dots: true,
            //customPaging: function (slider, i) {
            //    return '<div class="tab">' + $(slider.$slides[i]).find('.slide-title').text() + '</div>';
            //},
        });
    });
</script>
